<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kosmos.cloud.dao.UserDao">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.kosmos.cloud.bean.User">
		<id column="user_id" property="id" />
		<result column="username" property="userName" />
		<result column="password" property="password" />
	</resultMap>
	
	<select id="getUserByName" resultMap="BaseResultMap" parameterType="java.util.Map">
		select u.* from sys_user u  where  u.userName= #{userName}
	</select>
	
</mapper>
